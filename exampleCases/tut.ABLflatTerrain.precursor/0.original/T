FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T ;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "../setUp"

 
dimensions      [0 0 0 1 0 0 0];
 
internalField   uniform $T0;

boundaryField
{
    lower
    {
        type            zeroGradient;
    }
    upper
    {
        type            fixedGradient;
        gradient        uniform $TGradUpper;
    }
    west
    {
        type            cyclic;
    }
    east
    {
        type            cyclic;
    }
    south
    {
        type            cyclic;
    }
    north
    {
        type            cyclic;
    }
}


